<form name="EditForm" method="post" enctype="multipart/form-data" onsubmit="return false">

    <h2>{LoginData}</h2>

    <h3>{Login}</h3>
    <p><input type="text" name="login" value="<ease:login />" /></p>

    <h3>{Password1}</h3>
    <p><input type="password" name="password1" /></p>

    <h3>{Password2}</h3>
    <p><input type="password" name="password2" /></p>

    <hr />

    <h2>{Settings}</h2>

    <h3>{Admin1}</h3>
    <p><input type="checkbox" name="admin" id="admin" value="1" class="Checkbox" <ease:adminchecked /> /> <label for="admin">{Admin2}</label></p>

    <h3>{Language}</h3>
    <p><select name="language">
	<ease:language />
    </select></p>

    <h3>{Theme}</h3>
    <p><select name="theme">
	<ease:theme />
    </select></p>

    <hr />

    <h2>{UserData}</h2>

    <h3>{Firstname}</h3>
    <p><input type="text" name="firstname" value="<ease:firstname />" /></p>

    <h3>{Lastname}</h3>
    <p><input type="text" name="lastname" value="<ease:lastname />" /></p>

    <h3>{Email}</h3>
    <p><input type="text" name="email" value="<ease:email />" /></p>

</form>