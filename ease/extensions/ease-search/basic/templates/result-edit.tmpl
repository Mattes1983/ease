<ease:edit edit="true" move="true" join="true" copy="true" delete="true" />
<div id="EASESearchEdit-<ease:id />" class="EASESearchEditDisplay">
    <div class="EASESearchEdit">
	<form name="EASESearchEditForm-<ease:id />" onSubmit="return false">
	<h1>{Settings1}</h1>
	<p>{Settings2}</p>

	<div class="EASESearchEditBlock">
	    <div class="EASESearchEditLeft">{MaxPerPage}:</div>
	    <div class="EASESearchEditRight"><input name="maxperpage" value="<ease:maxperpage />" /></div>
	    <div class="Clear"></div>
	</div>

	<div class="EASESearchEditBlock">
	    <div class="EASESearchEditLeft">{HeadlineLength}:</div>
	    <div class="EASESearchEditRight"><input name="headlinelength" value="<ease:headlinelength />" /></div>
	    <div class="Clear"></div>
	</div>

	<div class="EASESearchEditBlock">
	    <div class="EASESearchEditLeft">{TextLength}:</div>
	    <div class="EASESearchEditRight"><input name="textlength" value="<ease:textlength />" /></div>
	    <div class="Clear"></div>
	</div>

	<div class="EASESearchEditBlock">
	    <div class="EASESearchEditLeft">{PagingSpace}:</div>
	    <div class="EASESearchEditRight"><input name="pagingspace" value="<ease:pagingspace />" /></div>
	    <div class="Clear"></div>
	</div>

	<div class="Clear" style="height:10px;"></div>

	</form>
    </div>
</div>